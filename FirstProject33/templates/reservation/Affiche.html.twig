

{% extends 'back/base.html.twig' %}
    {% block body%}

<h1> liste de reservation </h1>
<table border="1" >
    <tr>
        <th>id_reservation</th>
        <th>cin_client</th>
        <th>ref_match</th>
        <th>num_ticket</th>
        <th>date_reservation</th>

        <td> Delete</td>
        <td> Update</td>
    </tr>
    <tr {% for r in reservation %}>
        <td>{{ r.getIdReservation() }}</td>
        <td>{{ r.getCinClient() }}</td>
        <td>{{ r.getRefMatch()}}</td>
        <td>{{ r.getNumTicket()}}</td>
        <td>{{ r.getDateReservation()|date("m/d/Y")}}</td>
        <td> <a href="{{ path('updater',{'id_reservation':r.getIdReservation()}) }}">update</a></td>
        <td> <a href="{{ path('d',{id_reservation:r.getIdReservation()}) }}">Delete</a></td>
    </tr {% endfor %}>
</table>
{% endblock %}
